  "IPRateLimiting": {
    //Kota aþýlma durumunda ise dönen respons içeriðini custom hale getirebiliyorum.

    "QuotaExceededResponse": {
      "Content": "errors:[{{  \"code\": \"429\",\"message\": \"istek limiti asilmistir.\", \"details\": \"kota asildi. {1} basina {0} istek yapabilirsiniz. lutfen {2} saniye icerisinde tekrar deneyiniz.\" }}]",
      "ContentType": "application/json",
      "StatusCode": 429
    },
    "EnableEndpointRateLimiting": true,
    "RealIpHeader": "x-real-ip",
    //baþarýsýz isteklerde sayýlsýn mý kontrolüdür.
    "StackBlockedRequests": false,
    //Çok fazla request yapýlýrsa bu hata döner.
    "HttpStatusCode": 429,
    //burada belirtilen IP ler ile kurala tabi olmayan adresleri belirtmiþ oluyorum.
    "IpWhitelist": [ "127.0.0.1" ],
    //kurallarýn hangi endpoind üzerinde muaf olmasýný istiyorsam, endpoinleri tanýmlarým
    "EnpointWhiteList": [ "put:/api/product" ],
    "GeneralRules": [
      {
        //* olmasý tüm en pointler için geçerli olduðu anlamýna gelir.
        "Endpoint": "*:/api/product",
        "Limit": 2,
        //5 saniyede 2 kere istek yapýlabilir bilgisi döner.
        "Period": "5s"
      },
      {
        //* olmasý tüm en pointler için geçerli olduðu anlamýna gelir.
        "Endpoint": "*:/api/product",
        "Limit": 100,
        //toplamda 1 saatte 100 kere istek yapýlabilir bilgisi döner.
        // yukarýdakinden farklý olarak saat bazýnda iþlem yaptýk
        "Period": "1h"
      },
      {
        //* olmasý tüm en pointler için parametre geçerli olduðu anlamýna gelir.
        //ör: GET:api/product/(name)kalem"
        "Endpoint": "*:/api/product/*",
        "Limit": 5,
        //toplamda 30 sn de 5 kere istek yapýlabilir bilgisi döner.
         "Period": "30s"
      },
      {
        //* olmasý tüm en pointler için geçerli olduðu anlamýna gelir.
        "Endpoint": "*:/api/categories",
        "Limit": 5,
        //30 saniyede 5 kere istek yapýlabilir bilgisi döner.
        "Period": "30s"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
